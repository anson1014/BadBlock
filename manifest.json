{
  "manifest_version": 2,

  "name": "BadBlock",
  "description": "Block out the haters.",
  "version": "1.0",
  
  "background": {
      "scripts": ["jquery-3.4.1.min.js", "background.js"]
  },
  
  "content_scripts": [
      {
          "matches":["<all_urls>"],
          "js":["jquery-3.4.1.min.js", "script.js"],
          "css": ["css/style.css"],
          "run_at": "document_end"
      }
  ],

  "browser_action": {
    "default_icon": "Biconimage.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
  
  
}
